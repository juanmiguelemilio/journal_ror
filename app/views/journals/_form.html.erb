<div class="flex-row d-flex justify-content-center">

<div class="col-md-8">
  <div class="">
    <h3 class="todo_list_title">Journal</h3> <hr>
    <div class="card-body">
    <%= form_for @journal do |f| %>

    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    </div>
    
    <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
    </div> <br>

    <div class="form-group">
    <%= f.select :category_id, Category.all.map { |cat| [cat.category, cat.id] } %>
    </div> <br>

    <%= f.submit class: 'btn btn-dark' %>
    <%= link_to "Back", journals_path, class: 'btn btn-secondary' %>
    <% end %>
    </div>
  </div>
</div>


</div>